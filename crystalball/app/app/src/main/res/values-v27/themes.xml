<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme" parent="Theme.Base">
        <item name="android:statusBarColor">@color/blue_grey_50</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarDividerColor">@color/divider</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Theme.NoActionBar.Fullscreen" parent="Theme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:navigationBarDividerColor">@null</item>
    </style>
</resources>